{
  "manifest_version": 3,
  "name": "Sidebar Extension",
  "version": "1.0",
  "description": "A simple Chrome extension with a persistent sidebar",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_title": "Open Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
